<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">

    <ImageView
        android:id="@+id/imgUpdateProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait" />

    <EditText
        android:id="@+id/txtUpdateProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imgUpdateProfilePic"
        app:layout_constraintStart_toStartOf="@+id/imgUpdateProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/imgUpdateProfilePic" />

    <EditText
        android:id="@+id/txtUpdateProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtUpdateProfileName"
        app:layout_constraintStart_toStartOf="@+id/txtUpdateProfileName"
        app:layout_constraintTop_toBottomOf="@+id/txtUpdateProfileName" />

    <Button
        android:id="@+id/btnSaveProfileInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/custom_button"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/txtUpdateProfileEmail"
        app:layout_constraintStart_toStartOf="@+id/txtUpdateProfileEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtUpdateProfileEmail" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:text="Change password"
        app:layout_constraintEnd_toEndOf="@+id/btnSaveProfileInformation"
        app:layout_constraintStart_toStartOf="@+id/btnSaveProfileInformation"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveProfileInformation" />
</android.support.constraint.ConstraintLayout>